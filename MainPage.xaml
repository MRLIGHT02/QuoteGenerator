<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="QuoteGenerator.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
            <GradientStop Offset="0" Color="#42f5ce" />
            <GradientStop Offset="0.25" Color="#4842f5" />
            <GradientStop Offset="0.50" Color="#8d42f5" />
            <GradientStop Offset="0.75" Color="#f5b042" />
            <GradientStop Offset="1" Color="#f20c0c" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid Margin="25" RowDefinitions=".8*,.2*">
        <Label
            x:Name="QuoteLable"
            FontFamily="ComicRelief-Regular"
            FontSize="50"
            HorizontalTextAlignment="Center"
            Text="Code is like humor. When you have to explain it, it’s bad. — Cory House"
            TextColor="White"
            VerticalOptions="Center" />
        <Button
            x:Name="BtnGenerateQoute"
            Grid.Row="1"
            BackgroundColor="Black"
            Clicked="BtnGenerateQoute_Clicked"
            Opacity=".4"
            Text="Get New Quote" />
    </Grid>

</ContentPage>