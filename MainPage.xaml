<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="QuoteGenerator.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid BackgroundColor="NavajoWhite">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,0" />
            <GradientStopCollection>
                <GradientStop Offset="0" Color="DarkBlue" />
            </GradientStopCollection>
        </Grid.Background>
        <Grid Margin="25" RowDefinitions=".8*,.2*">
            <Label
                FontFamily="ComicRelief-Regular"
                FontSize="50"
                HorizontalTextAlignment="Center"
                Text="Code is like humor. When you have to explain it, it’s bad. — Cory House"
                TextColor="White"
                VerticalOptions="Center" />
            <Button
                Grid.Row="1"
                BackgroundColor="Black"
                Opacity=".4"
                Text="Get New Quote" />
        </Grid>
    </Grid>

</ContentPage>
